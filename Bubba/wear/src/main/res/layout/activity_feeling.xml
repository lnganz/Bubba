<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tminusone60.finalproject160.FeelingActivity"
    tools:deviceIds="wear_round">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/feeling_background"
        android:background="#5efcf9" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/feeling_card_background"
        android:background="#ffffff"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true" />

    <SeekBar
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/feeling_seekbar"
        android:progress="70"
        android:max="100"
        android:progressBackgroundTint="#000000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:minHeight="30dp"
        android:maxHeight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:indeterminate="false"
        android:padding="20dp"
        style="CustomSeekBar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feeling_happyface"
        android:src="@drawable/slider_happy_face"
        android:layout_alignTop="@+id/feeling_sad_face"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feeling_sad_face"
        android:src="@drawable/slider_sad_face"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How do you feel?"
        android:id="@+id/feeling_text"
        android:layout_alignTop="@+id/feeling_card_background"
        android:layout_centerHorizontal="true"
        android:textColor="#178f9a"
        android:layout_marginTop="10dp"
        android:textSize="16dp" />

</RelativeLayout>
