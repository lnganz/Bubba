<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tminusone60.finalproject160.MainActivity"
    tools:deviceIds="wear_round">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_background"
        android:src="#5efcf9"
        android:layout_alignParentStart="false"
        android:focusable="false"
        android:elevation="-2dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_bubba"
        android:scaleType="fitCenter"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/main_food_bar"
        android:layout_marginBottom="-20dp"
        android:visibility="visible"
        android:src="@drawable/bubba_not_happy" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#6b6227"
        android:gravity="top|center"
        android:id="@+id/main_food_bar"
        android:visibility="visible"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/main_food_button"
            android:src="@drawable/food_apple"
            android:background="?android:selectableItemBackgroundBorderless"
            android:scaleType="fitCenter" />
    </LinearLayout>

</RelativeLayout>
